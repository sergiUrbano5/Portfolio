---
import Linkedin from "./Linkedin.astro";
import Github from "./Github.astro";
import ArrowDown from "./ArrowDown.astro";
import Download from "./Download.astro";
import "@fontsource/fredoka-one";
---

<header id="inicio">
    <div class="container py-12 mx-auto">
        <div
            class="text-center animate-fade-in-down animate-delay-250 animate-duration-500"
        >
            <h1
                class="ms-6 lg:ms-0 text-transparent bg-clip-text bg-gradient-to-r from-yellow-100 to-yellow-200 text-5xl uppercase"
            >
                Sergi Urbano
            </h1>
            <h3
                class="mt-12 bg-clip-text text-transparent bg-gradient-to-r from-violet-900 via-slate-50 to-violet-100 font-medium text-4xl "
            >
                Programador Junior
            </h3>
        </div>
        <div class="grid grid-cols-1 lg:grid-cols-3 mt-12">
            <div class="grid items-center justify-items-center lg:justify-items-end py-12 lg:py-0">
                <a
                    href="https://www.linkedin.com/in/sergi-urbano-4161452a7/"
                    target="_blank"
                    rel="nofollow noopener"
                >
                    <div
                        class="w-auto shadow-lg shadow-black rounded-full animate-fade-in-right animate-delay-1000 animate-duration-500"
                    >
                        <div
                            class="flex items-center text-opacity-100 hover:text-opacity-100 hover:brightness-150 hover:font-bold hover:scale-110 text-black px-6 py-2 cursor-pointer bg-clip-padding hover:bg-clip-text hover:text-transparent bg-gradient-to-tl from-yellow-200 via-neutral-400 to-current border-2 border-white transition rounded-full delay-75 duration-700 ease-in-out"
                        >
                            <Linkedin />
                            <p class="px-2 font-bold text-xl">LinkedIn</p>
                        </div>
                    </div>
                </a>
            </div>
            <div
                class="justify-center items-center flex animate-blurred-fade-in animate-duration-800 animate-delay-500 order-first lg:order-none"
            >
                <div
                    class="contrast-125 w-5/12 transition-all delay-100 duration-700 grayscale blur-sm hover:grayscale-0 hover:blur-none drop-shadow-lg"
                >
                    <img class="w-full rounded-full" src="/csvimg.jpg" alt="Imagen Persona" />
                </div>
            </div>

            <div class="grid items-center justify-items-center lg:justify-items-start">
                <a
                    href="https://github.com/sergiUrbano5"
                    target="_blank"
                    rel="nofollow noopener"
                    aria-label="Go to GitHub profile"
                >
                    <div
                        class="w-auto shadow-lg shadow-black rounded-full animate-fade-in-left animate-delay-1000 animate-duration-500"
                    >
                        <div
                            class="flex items-center text-opacity-100 hover:text-opacity-100 hover:brightness-150 hover:font-bold hover:scale-110 text-black px-6 py-2 cursor-pointer bg-clip-padding hover:bg-clip-text hover:text-transparent bg-gradient-to-tl from-yellow-200 via-neutral-400 to-current border-2 border-white transition rounded-full delay-75 duration-700 ease-in-out"
                        >
                            <Github />
                            <p class="px-2 font-bold text-xl">GitHub</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <div class="grid items-center mt-12">
            <a class="w-1/7 mx-auto" href="/CV_Sergi_Urbano.pdf" download="">
                <div
                    class="shadow-lg shadow-black rounded-full animate-fade-in-up animate-delay-1000 animate-duration-500"
                >
                    <div
                        class="flex items-center text-opacity-100 hover:text-opacity-100 hover:brightness-150 hover:font-bold hover:scale-110 text-black px-6 py-2 cursor-pointer bg-clip-padding hover:bg-clip-text hover:text-transparent bg-gradient-to-tl from-yellow-200 via-neutral-400 to-current border-2 border-white transition rounded-full delay-75 duration-700 ease-in-out"
                    >
                        <Download />
                        <p class="px-2 font-bold text-xl">Curriculum</p>
                    </div>
                </div>
            </a>
        </div>
        <div
            id="arrowDown"
            class="text-center mt-8 animate-fade-in animate-delay-1000 animate-duration-800 py-10 lg:py-0"
        >
            <ArrowDown />
        </div>
    </div>
</header>

<style>
    h1 {
        letter-spacing: 2rem;
        font-family: "Fredoka One", system-ui;
    }
</style>
<script>
    window.onscroll = function () {
        var div = document.getElementById("arrowDown");
        if (window.scrollY > 70) {
            div?.classList.add("animate-fade-out");
        } else {
            div?.classList.remove("animate-fade-out");
        }
    };
</script>
